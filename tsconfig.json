{
  "compilerOptions": {
    "target": "ES6",
    "module": "CommonJS",
    "outDir": "./dist",
    "rootDir": "./",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": [
    "src/**/*",
    "script/**/*",
    "app.ts",
    "scripts/seed.ts",
    "server.ts"
  ],
  "exclude": ["node_modules"]
}
